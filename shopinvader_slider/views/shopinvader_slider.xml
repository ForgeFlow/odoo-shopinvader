<odoo>

    <record model="ir.ui.view" id="shopinvader_slider_form_view">
        <field name="name">shopinvader.slider.form (in shopinvader_slider)</field>
        <field name="model">shopinvader.slider</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="style"/>
                        <field name="description"/>
                    </group>
                    <group name="image_id" string="Slider Images">
                        <field name="image_id" class="o_website_sale_image_list" context="{'default_name': name}" mode="kanban" options="{'create_text':'Add a Media'}" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

