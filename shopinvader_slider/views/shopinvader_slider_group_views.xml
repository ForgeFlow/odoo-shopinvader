<odoo>

    <record model="ir.ui.view" id="shopinvader_slider_group_form_view">
        <field name="name">shopinvader.slider.group.form (in shopinvader_slider)</field>
        <field name="model">shopinvader.slider.group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="title"/>
                        <field name="style"/>
                        <field name="font_color"/>
                    </group>
                    <group name="background_image_id" string="Group Background Image">
                        <field name="background_image_id" class="o_website_sale_image_list" mode="kanban" nolabel="1"/>
                    </group>
                    <group string="Modifiers">
                        <field name="display_on_mobile"/>
                        <field name="display_indicators"/>
                        <field name="display_controls"/>
                        <field name="full_width"/>
                    </group>
                    <group string="Slides">
                        <field name="slider_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

