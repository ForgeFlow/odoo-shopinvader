<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="product_attribute_view_form" model="ir.ui.view">
            <field name="model">product.attribute</field>
            <field name="inherit_id" ref="sale.product_attribute_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='value_ids']/tree/field[@name='html_color']" position="after">
                    <field name="image_id" class="o_website_sale_image_list" mode="kanban" nolabel="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
