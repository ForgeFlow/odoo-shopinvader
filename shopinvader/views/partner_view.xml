<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="shopinvader" string="Shopinvader">
                    <separator string="Shopinvader users" />
                    <field name="shopinvader_bind_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="backend_id"/>
                            <field name="external_id" readonly="True"/>
                            <field name="create_date" readonly="True"/>
                            <field name="sync_date" readonly="True"/>
                            <field name="state"/>
                        </tree>
                    </field>
                    <group name="extras">
                      <group>
                        <field name="address_type" readonly="1"/>
                        <field name="has_shopinvader_user" invisible="1" />
                        <field name="has_shopinvader_user_to_validate" attrs="{'invisible':[('has_shopinvader_user_to_validate','=',False)]}" />
                        <field name="is_shopinvader_active" attrs="{'invisible':[('has_shopinvader_user','=',True)]}"/>
                      </group>
                    </group>
                </page>
            </notebook>
            <xpath expr="//field[@name='child_ids']/kanban//div[hasclass('o_kanban_image')]" position="before">
                <field name="address_type" invisible="1" />
                <field name="has_shopinvader_user" invisible="1" />
                <field name="has_shopinvader_user_to_validate" invisible="1" />
                <field name="is_shopinvader_active" invisible="1" />
                <div t-if="record.has_shopinvader_user_to_validate.raw_value" class="float-right">
                    <a class="btn btn-sm btn-warning" name="action_shopinvader_validate_customer" type="object" title="There's at least one Shopinvader user to validate">
                        <i class="fa fa-check" aria-hidden="true"></i> Shop: validate user
                    </a>
                </div>
                <div t-if="!record.has_shopinvader_user.raw_value and record.address_type.raw_value=='address' and !record.is_shopinvader_active.raw_value" class="float-right">
                    <a class="btn btn-sm btn-warning"  name="action_shopinvader_validate_address" type="object" title="There's at least one address to validate">
                        <i class="fa fa-check" aria-hidden="true"></i> Shop: validate address
                    </a>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <filter name="inactive" position="after">
                <separator/>
                <filter
                    string="Shopinvader: address to validate"
                    name="shopinvader_address_to_validate"
                    domain="[('parent_has_shopinvader_user','=', True), ('has_shopinvader_user','=', False),('is_shopinvader_active','=',False),('address_type','=','address')]"/>
                <filter
                    string="Shopinvader: active user"
                    name="shopinvader_active_user"
                    domain="[('has_shopinvader_user_active', '=', True)]"/>
                <filter
                    string="Shopinvader: user to validate"
                    name="shopinvader_user_to_validate"
                    domain="[('has_shopinvader_user_to_validate', '=', True)]"/>
            </filter>
        </field>
    </record>

</odoo>
